    <!-- Enhanced Music Player -->
    <div class="music-player">
        <audio id="backgroundMusic" preload="auto"></audio>
        <div>
            <button id="prevTrack" onclick="changeTrack(-1)">‚èÆÔ∏è Previous</button>
            <button id="musicToggle" onclick="toggleMusic()">Play</button>
            <button id="nextTrack" onclick="changeTrack(1)">‚è≠Ô∏è Next</button>
        </div>
        <input type="range" id="volumeControl" min="0" max="1" step="0.1" value="0.5" onchange="setVolume()">
        <div class="track-info">
            <span class="track-title" id="trackTitle">No track loaded</span>
        </div>
    </div>

    <script>
        let isPlaying = false;
        let currentTrackIndex = 0;
        const tracks = [
            { title: "For the rest of my life", src: "your-favorite-song.mp3" },
            { title: "I wanna be yours", src: "I_Wanna_Be_Yours.mp3" },
            { title: "BLUE LOVE", src: "BLUE_LOVE.mp3" }
        ];

        const audioPlayer = document.getElementById('backgroundMusic');
        const musicToggle = document.getElementById('musicToggle');
        const trackTitle = document.getElementById('trackTitle');

        function loadTrack(index) {
            currentTrackIndex = (index + tracks.length) % tracks.length;
            audioPlayer.src = tracks[currentTrackIndex].src;
            trackTitle.textContent = tracks[currentTrackIndex].title;
        }

        function toggleMusic() {
            if (isPlaying) {
                audioPlayer.pause();
                musicToggle.textContent = 'Play';
            } else {
                audioPlayer.play();
                musicToggle.textContent = 'Pause';
            }
            isPlaying = !isPlaying;
        }

        function changeTrack(direction) {
            loadTrack(currentTrackIndex + direction);
            if (isPlaying) audioPlayer.play();
        }

        function setVolume() {
            audioPlayer.volume = document.getElementById('volumeControl').value;
        }

        // Load the first track by default
        loadTrack(0);

        function revealMessage() {
            document.getElementById('hiddenMessage').style.display = 'block';
            createHeartsExplosion();
        }

        function createHeartsExplosion() {
            for (let i = 0; i < 30; i++) {
                createHeart();
            }
        }

        const heartContainer = document.getElementById('heartContainer');

        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 2 + 3 + 's';
            heartContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 5000);
        }
    </script>
